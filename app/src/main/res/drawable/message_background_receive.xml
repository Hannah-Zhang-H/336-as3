<!-- message_background_receive.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- The main message bubble -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#333333"/> <!-- Dark color for received messages -->
            <corners android:radius="10dp"/> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Triangle/Arrow on the left side -->
    <item
        android:gravity="start|center_vertical"
        android:left="0dp"
        android:top="8dp">
        <rotate android:fromDegrees="-45">
            <shape android:shape="rectangle">
                <solid android:color="#333333"/> <!-- Same color as the bubble -->
                <size android:width="12dp" android:height="12dp"/> <!-- Size of the arrow -->
            </shape>
        </rotate>
    </item>

</layer-list>
