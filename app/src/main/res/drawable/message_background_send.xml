<!-- message_background_send.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- The main message bubble -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/light_green"/> <!-- Green color for sent messages -->
            <corners android:radius="10dp"/> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Triangle/Arrow on the right side -->
    <item
        android:gravity="end|center_vertical"
        android:right="0dp"
        android:top="8dp">
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@color/light_green"/> <!-- Same color as the bubble -->
                <size android:width="12dp" android:height="12dp"/> <!-- Size of the arrow -->
            </shape>
        </rotate>
    </item>

</layer-list>
